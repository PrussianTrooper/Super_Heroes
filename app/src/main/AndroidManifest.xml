<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="prussian.project.kode_tz.super_heroes">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="prussian.project.kode_tz.super_heroes.App"
        android:icon="@drawable/ic_dc_comics_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.SuperHeroes"
        tools:ignore="AllowBackup">
        <activity
            android:name="prussian.project.kode_tz.super_heroes.ui.activity.main.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>